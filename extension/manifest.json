{
  "name": "Lead Crawler",
  "version": "1.0.0",
  "description": "Lead Crawler",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
